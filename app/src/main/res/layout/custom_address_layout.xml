<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="@dimen/_290sdp"
    android:layout_gravity="center"
    android:background="@drawable/my_custom_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSelectDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/green"
        android:padding="@dimen/_8sdp"
        android:text="Select Delivery Address"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

    <com.avr.tiffinsorderonline.CustomRecyclerView.CustomRecyclerView
        android:id="@+id/myAddressView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_215sdp"
        android:padding="@dimen/_8sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/green"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/newAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Add New Address"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />


    </LinearLayout>

</LinearLayout>